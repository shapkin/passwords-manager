<table class="table">
  <thead>
    <tr>
      <th>Site</th>
      <th style="width:150px;">Login</th>
      <th style="width:150px;">Password</th>
    </tr>
  </thead>
  <tbody>
    <% @csv.each do |row| -%>
    <% data = row.to_hash -%>
    <tr>
      <td><%= data["site"] %></td>
      <td><%= data["login"] %></td>
      <td>
        <a href="#" onclick="show(this);return false;">show</a>
        <div style="display:none;">
          <a href="#" onclick="hide(this);return false;">hide</a>
          <%= data["password"] %>
        </div>
      </td>
    </tr>
    <% end -%>
  </tbody>
</table>
<script type="text/javascript">
  function show(elm) {
    $(elm).hide().next().show();
  }
  function hide(elm) {
    $(elm).parent().hide().prev().show();
  }
</script>
